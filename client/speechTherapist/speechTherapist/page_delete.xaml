        <TextBox x:Name="tbox1" Header="חיפוש" FontSize="30" FlowDirection="RightToLeft" Margin="480,120,100,780"></TextBox>
        <Button x:Name="b1" Content="מחק" Margin="200,0,0,100" FontSize="30" Foreground="Purple" VerticalAlignment="Bottom" Width="150" Height="100" Background="#47FF0000"></Button>
    </Grid>
